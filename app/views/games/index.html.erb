<% if @categories.present? %>
  <h2>Categories</h2>
  <ul>
    <% @categories.each do |c| %>
      <li>
        <%= link_to c.title, games_path(:c_id => c.id) %>
      </li>
    <% end %>
    <li>
      <%= link_to "Show all", root_path %>
    </li>
  </ul>

<% end %>
<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.price %></td>
        <td><%= game.category.title %></td>
        <td><%= game.user.firstname %></td>
        <td><%= link_to 'Show', game %></td>
        <% if current_user == game.user %>
          <td><%= link_to 'Edit', edit_game_path(game) %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
